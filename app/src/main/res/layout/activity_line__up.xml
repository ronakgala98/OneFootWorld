<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Line_Up"
        android:id="@+id/view_root"
        android:layout_below="@+id/toolbar"
        android:layout_weight="1"
    >

    <RelativeLayout
        android:id="@+id/view_root1"
        android:layout_width="match_parent"
        android:layout_height="650dp"
        android:layout_marginTop="1dp">

        <ImageView
            android:id="@+id/field"
            android:layout_width="match_parent"
            android:layout_height="650dp"
            android:src="@drawable/field" />

        <ImageView
            android:id="@+id/player1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="100dp"
            android:src="@drawable/player" />

        <ImageView
            android:id="@+id/player2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="100dp"
            android:src="@drawable/player" />

        <ImageView
            android:id="@+id/player3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="100dp"
            android:src="@drawable/player" />

        <ImageView
            android:id="@+id/player4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="270dp"
            android:src="@drawable/player" />

        <ImageView
            android:id="@+id/player5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="250dp"
            android:src="@drawable/player" />

        <ImageView
            android:id="@+id/player6"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="250dp"
            android:src="@drawable/player" />

        <ImageView
            android:id="@+id/player7"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="420dp"
            android:src="@drawable/player" />

        <ImageView
            android:id="@+id/player8"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="450dp"
            android:src="@drawable/player" />

        <ImageView
            android:id="@+id/player9"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="450dp"
            android:src="@drawable/player" />

        <ImageView
            android:id="@+id/player10"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="340dp"
            android:layout_marginTop="420dp"
            android:src="@drawable/player" />

        <ImageView
            android:id="@+id/player11"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="550dp"
            android:src="@drawable/player" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:id="@+id/view_root2"
        android:layout_below="@id/view_root1"
        android:layout_marginTop="0pt">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:id="@+id/minus"
            android:src="@drawable/minus"
            />
        <ImageView
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:id="@+id/plus"
            android:src="@drawable/plus"
            android:layout_toRightOf="@+id/minus"
            />
        <ImageView
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:id="@+id/reset"
            android:src="@drawable/reset"
            android:layout_toRightOf="@+id/plus"
            />

    </RelativeLayout>

</RelativeLayout>